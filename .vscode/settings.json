{
  // Run eslint on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Never show expanded abbreviation
  "emmet.showExpandedAbbreviation": "never",
  // Disable code minimap
  "editor.minimap.enabled": false,
  // Wrap long lines
  "editor.wordWrap": "on",
  "yaml.schemas": {
    "https://www.artillery.io/schema.json": []
  }
}
